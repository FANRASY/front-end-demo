<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>

<body>
    <div id="container">
        <h1>URL Shrinker</h1>
        <form action="shortUrls" method="post">
            <label for="fullurl"></label>
            <input type="url" placeholder="Url" name="fullurl" id="fullurl">
            <button class="btn-success btn-small" type="submit">Shrink</button>
        </form>
        <table class="table table-striped table-responsive table-wrapper">
            <thead>
                <tr>
                    <th>Full RUL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach((v) => {%>
                    <tr>
                        <td><a href="<%= v.full %>"><%= v.full %></a>
                        </td>
                        <td><a href="<%= v.short %>"><%= v.short %></a></td>
                        <td><%= v.clicks %></td>
                    </tr>
                <%})%>
            </tbody>
        </table>
    </div>
</body>

</html>